@model FSharpList<ReadModels.GrainSummary>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Unidentified Pollen and Spore Pool";
    ViewData["Subtitle"] = "Some specimens have been submitted, for which the botanical origin is not known. Can you help with a morphological identification?";
}

@* Header *@
@section headerSection {
    <header><div class="container">
    <h1><i class="fa fa-question-circle" aria-hidden="true"></i> @ViewData["Title"]</h1>
    <p>@ViewData["Subtitle"]</p>
    </div></header>
}

@* Breadcrumb *@
<div class="row">
    <div class="col-md-12">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">Pollen of Unknown Identity</li>
        </ol>
    </div>
</div>

<div class="row">
    @* Grain Grid *@
    <div class="col-md-8">
        <ul class="grain-grid columns-4">
        @foreach (var grain in Model)
        {
            <li>
                <a href="/Identify/@grain.Id">
                    <div class="img-container portrait">
                        <img src="@grain.Thumbnail"/>
                        <div class="ribbon"><span>?</span></div>
                    </div>
                </a>
            </li>
        }
        </ul>
    </div>
    @* Filters *@
    <div class="col-md-4">
        <a class="btn btn-primary btn-lg btn-block" style="margin-bottom:1em;" href="/Identify/Upload"><i class="fa fa-plus-square" aria-hidden="true"></i> Submit a Grain</a>
        <div class="card mb-3 text-center crop-panel">
            <div class="card-block">
                <p class="card-text">
                    These individual pollen and spores require taxonomic identification. 
                </p>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/knockout/3.4.1/knockout-min.js"></script>
}

