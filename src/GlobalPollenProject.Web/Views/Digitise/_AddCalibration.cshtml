@* Calibration Modal *@
<div data-bind="BSModal: isEditingCalibrations" class="modal bd-example-modal-lg" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Digitise a Collection</h5>
                <button type="button" class="close" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
            </div>
            <div class="modal-body">
                <p>Please tell us about the reference collection you wish to digitise. You can edit this information later if
                    necessary.</p>
                <div class="form-group">
                    <label>Calibration Friendly Name</label>
                    <input data-bind="textInput: friendlyName" class="form-control" id="friendlyname" />
                    <small id="friendlyname-help" class="form-text text-muted">Use a name that is specific to this microscope, for example its make and model.</small>
                </div>
                
                <label>Microscope type</label>
                <select data-bind="value: microscopeType" class="form-control input-sm inline-dropdown">
                    <option value="Compound">Compound</option>
                    <option value="Single">Single</option>
                    <option value="Digital">Digital</option>
                </select>

                <input type="file" class="upload" data-bind="event: { change: function() { calibrationImage.changeImage($element) } }" />
                <div id="calibration-image-container"></div>
            </div>
            <div class="modal-footer">
                <button data-bind="click: startCollection" type="button" data-bind="startCollection" class="btn btn-primary">Create</button>
            </div>
        </div>
    </div>
</div>